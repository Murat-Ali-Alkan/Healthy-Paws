@model CompanyViewModel

@{
	ViewData["Title"] = "Add Page";

}

<h2>Add Company</h2>

<form asp-controller="Company" asp-action="Add" method="post">
	<div class="mb-3 ms-5 me-5">
		<label asp-for="Name" class="form-label">Name</label>
		<input asp-for="Name" class="form-control" placeholder="Uriel Pharmacy Inc.">
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="mb-3 ms-5 me-5">
		<label asp-for="PhoneNo" class="form-label">Phone Number</label>
		<input asp-for="PhoneNo" class="form-control" placeholder="0-536-386-5844">
		<span asp-validation-for="PhoneNo" class="text-danger"></span>
	</div>
	<div class="mb-3 ms-5 me-5">
		<label asp-for="EmailAddress" class="form-label">Email Address</label>
		<input asp-for="EmailAddress" class="form-control" placeholder="nslaney0@networksolutions.com">
		<span asp-validation-for="EmailAddress" class="text-danger"></span>
	</div>
	<div class="mb-3 ms-5 me-5">
		<label asp-for="Address" class="form-label">Address</label>
		<input asp-for="Address" class="form-control" placeholder="173 Eastlawn Place">
		<span asp-validation-for="Address" class="text-danger"></span>
	</div>
	<div class="mb-3 ms-5 me-5">
		<label asp-for="TaxNumber" class="form-label">TaxNumber</label>
		<input asp-for="TaxNumber" class="form-control" placeholder="1294876215">
		<span asp-validation-for="TaxNumber" class="text-danger"></span>
	</div>

	@* Checkbox for Animal Types*@
	<div class="mb-3 ms-5 me-5">
		<div>
			<label>Select Product(s)</label>
			<br />
			@for (int i = 0; i < Model.CompanyProducts.Count; i++)
			{
				@Html.CheckBoxFor(Model => Model.CompanyProducts[i].IsChecked)
				<label class="me-3">@Model.CompanyProducts[i].Name</label>
				@Html.HiddenFor(Model => Model.CompanyProducts[i].ProductId)
				@Html.HiddenFor(Model => Model.CompanyProducts[i].Name)
				if(i % 5 == 4)
					{<br />}
			}
		</div>
	</div>
	<button type="submit" class="btn btn-primary ms-5 me-5">Add</button>
	<button class="btn btn-danger" asp-action="List" asp-controller="Company">Cancel</button>
</form>


