@model List<Customer>

@{
    ViewData["Title"] = "List Page";
}
@if(ViewBag.VeterinarianName != null)
{
    <h2>@(ViewBag.VeterinarianName)'s Customers</h2>

    <br />

    <a asp-controller="Veterinarian" asp-action="List" class="btn btn-info">Back To Veterinarians</a>
    <a asp-controller="Customer" asp-action="List" class="btn btn-info">See All Customers</a>
    <br />
}
else
{
    <h2>Customers</h2>
    <br />

    <a asp-controller="Customer" asp-action="Add" class="btn btn-primary">Add Customer</a>

    <br />
}



<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Email Address</th>
            <th>Address</th>
            <th>Village</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.PhoneNo</td>
                <td>@(customer.EmailAddress ?? "<NULL>")</td>
                <td>@(customer.Address ?? "<NULL>") </td>
                <td>@customer.Village.Name</td>
                <td><a asp-controller="Customer" asp-action="ListVeterinarians" class="btn btn-info" asp-route-customerId="@customer.Id">See Veterinarians</a></td>
            </tr>

        }
    </tbody>
</table>